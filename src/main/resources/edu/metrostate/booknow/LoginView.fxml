<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/21.0.5" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.metrostate.booknow.Controllers.LoginController">
    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <VBox alignment="CENTER" prefHeight="800.0" prefWidth="1000.0" HBox.hgrow="ALWAYS">
                <children>
                    <Text fill="#1877f2" strokeType="OUTSIDE" strokeWidth="0.0" text="BookNow">
                        <font>
                            <Font name="System Bold" size="96.0" />
                        </font>
                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Discover and reserve tables at the best restaurants.">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Text>
                </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="800.0" prefWidth="400.0" style="-fx-background-color: white; -fx-padding: 30; -fx-spacing: 10;" HBox.hgrow="ALWAYS">
                <children>
                    <TextField fx:id="usernameField" promptText="Username" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" VBox.vgrow="ALWAYS">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </TextField>
                    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" VBox.vgrow="ALWAYS">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </PasswordField>
                    <Button fx:id="loginButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onLoginButtonAction" prefHeight="35.0" style="-fx-background-color: #1877f2; -fx-text-fill: white; -fx-background-radius: 20; -fx-border-radius: 20;" text="Login">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                    <Text fill="#1877f2" strokeType="OUTSIDE" text="Forgot Password?" />
                    <Button maxWidth="Infinity" onAction="#onCreateAccountButtonAction" prefHeight="35.0" style="-fx-background-color: #42b72a; -fx-text-fill: white; -fx-background-radius: 20; -fx-border-radius: 20;" text="Create New Account">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                </children>
            </VBox>
        </children>
    </HBox>
</AnchorPane>
