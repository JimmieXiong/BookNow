-- Drop the existing database if it exists
DROP DATABASE IF EXISTS booknow;

-- Create a new database
CREATE DATABASE booknow;
USE booknow;

-- Create users table for storing account data
CREATE TABLE users (
    user_id INT PRIMARY KEY AUTO_INCREMENT,
    username VARCHAR(50) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL  -- Store password as VARCHAR(255) in case you want to hash them
);

-- Create restaurants table for storing restaurant information
CREATE TABLE restaurants (
    restaurant_id INT PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(255) NOT NULL,
    city VARCHAR(255) NOT NULL,
    cuisine_type VARCHAR(50) NOT NULL,
    description TEXT NOT NULL,
    menu_pdf VARCHAR(255),
    image_path VARCHAR(255)
);

-- Create reservations table for storing restaurant availability
CREATE TABLE reservations (
    reservation_id INT PRIMARY KEY AUTO_INCREMENT,
    restaurant_id INT NOT NULL,
    reservation_date DATE NOT NULL,
    CONSTRAINT fk_restaurant
        FOREIGN KEY (restaurant_id) REFERENCES restaurants(restaurant_id)
        ON DELETE CASCADE
);

